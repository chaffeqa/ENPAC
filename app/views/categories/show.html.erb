
<% @category = @node.category  %>

<h1><%= @category ? @category.title : 'Categories' %></h1>
<hr />


<section id="productMenu">
  <% if content_for?(:subMenu) %>
    <% yield :subMenu %>
  <% else %>
    <%= render_navigation(:level => 2..7) %>
  <% end %>
</section>


<section id="products">
<p><%= @category ? @category.description : 'All The inventory categories.' %></p>
<% if @category and not @category.items.displayed.empty? %>
  <% items = @category.items.displayed %>

  <ul class="itemList">
    <% items.each do |item|%>
      <%= content_tag_for :li, item do %>
        <p class="title"><%= link_to item.name, shortcut_path(item.node.shortcut) %></p>
        <div class="thumbnail"> <%= link_to image_tag(item.thumbnail_image ? item.thumbnail_image : "no_image_thumb.gif"), shortcut_path(item.node.shortcut) %> </div>
        <!--p class="cost"><%= number_to_currency(item.cost) %></p-->
      <% end %>
    <% end %>
  </ul>
  <hr/>
<% end %>
</section>




<%= content_for :breadcrumb do %>
  <%= render :partial => 'partials/breadcrumb' %>
<% end %>


<% content_for :page_title do %>
  <%= @node.title %>
<% end %>
<!-- End -->
