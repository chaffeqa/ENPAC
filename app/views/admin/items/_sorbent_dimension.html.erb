<div class="field"><span class="hint">Add the specific Sorbent Dimensions.</span>
      <label>Sorbent Dimensions</label><br />
    </div>
  <div class="field">
  <%= f.label :diameter  %>
  <%= f.text_field :diameter, :title => "Diameter" %>
  </div>
  <div class="field">
  <%= f.label :length %>
  <%= f.text_field :length, :title => "Length" %>
  </div>
  <div class="field">
  <%= f.label :width  %>
  <%= f.text_field :width, :title => "Width" %>
  </div>
  <div class="field">
  <%= f.label :height %>
  <%= f.text_field :height, :title => "Height" %>
  </div>
  <div class="field">
  <%= f.label :class_category  %>
  <%= f.text_field :class_category, :title => "Class" %>
  </div>
  <div class="field">
  <%= f.label :type %>
  <%= f.text_field :type, :title => "Type" %>
  </div>
  <div class="field">
  <%= f.label :absorbs  %>
  <%= f.text_field :absorbs, :title => "Absorbs" %>
  </div>
  <div class="field">
  <%= f.label :quantity %>
  <%= f.text_field :quantity, :title => "Quantity" %>
  </div>

  <!-- Add Capabilities -->
  <div class="field"><span class="hint">Add Multiple Capabilities.</span>
  </div>
  <% f.fields_for :sorbent_capabilities do |ac_form| %>
    <%= render :partial => 'sorbent_capability', :locals => { :f => ac_form } %>
  <% end %>
  <%= new_child_fields_template(f, :sorbent_capabilities)%>
  <div class="field"><label></label><%= add_child_link "Add Capability", :sorbent_capabilities %></div>