<h1 class="title">Item Capabilities</h1>

<p>Manage the choice of Item Capabilities</p>

<ul>
  <% @capabilities.each do |cap| %>
    <%= content_tag_for :li, cap do %>
    <strong><%= cap.name %></strong> |<%= link_to 'X', manage_capabilities_admin_items_path(:capability_id => cap), :confirm => 'Are you sure you want to delete this Capability?', :method => :delete %>|
  <% end %>
<% end %>
</ul>

<%= form_for @capability, :url => manage_capabilities_admin_items_path() do |f| %>
<div class="field">
  <%= f.label :name, :class => "req" %>
  <%= f.text_field :name, :title => "Capability Name" %>
</div>
<div class="field">
  <%= f.label :submit, raw("&nbsp;") %>
  <%= f.submit "Create Capability", :disable_with => "Please Wait...", :class => "btn medium" %>
</div>
<% end %>
<%= link_to 'Back to Items', admin_items_url() %>