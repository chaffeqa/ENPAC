<h1 class="title">Item Regulations</h1>

<p>Manage the choice of Item Regulations</p>

<ul>
  <% @regulations.each do |reg| %>
    <%= content_tag_for :li, reg do %>
    <strong><%= reg.name %></strong> |<%= link_to reg.link, reg.link %>| |<%= link_to 'X', manage_regulations_admin_items_path(:regulation_id => reg), :confirm => 'Are you sure you want to delete this Regulation?', :method => :delete %>|
  <% end %>
<%  end %>
</ul>

<%= form_for @regulation, :url => manage_regulations_admin_items_path() do |f| %>
<div class="field">
  <%= f.label :name, :class => "req" %>
  <%= f.text_field :name, :title => "Regulation Name" %>
</div><div class="field">
  <%= f.label :link %>
  <%= f.text_field :link, :title => "Link to Regulation" %>
</div>
<div class="field">
  <%= f.label :submit, raw("&nbsp;") %>
  <%= f.submit "Create Regulation", :disable_with => "Please Wait...", :class => "btn medium" %>
</div>
<% end %>
<%= link_to 'Back to Items', admin_items_url() %>